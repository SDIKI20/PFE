                </div>
              
                <!-- Localisation -->
                <div class="form-group">
                  <label for="location">location</label>
                  <input type="text" id="location" name="location" placeholder="Ex: Paris" required>
                </div>
                <!--Units-->
                <div class="form-group">
                    <label for="Units">Units</label>
                    <input type="number" id="Units" name="Units" min="1" placeholder="Ex: 3" required>
                </div>
                <!--Speed-->
                <div class="form-group">
                    <label for="Speed">Speed</label>
                    <input type="number" id="Speed" name="Speed" placeholder="Ex: 180" required>
                  </div>
                  <!--horspower-->
                  <div class="form-group">
                    <label for="horspower">horspower</label>
                    <input type="number" id="horspower" name="horspower" placeholder="Ex: 200" required>
                  </div>
                  <!--engine_type-->
                  <div class="form-group">
                    <label for="engine_type">engine_type</label>
                    <select id="engine_type" name="engine_type" required>
                      <option value="">--Sélectionner--</option>
                      <option value="4-Cylinder">4-Cylinder</option>
                      <option value="4-Cylinder Turbo">4-Cylinder Turbo</option>
                      <option value="4-Cylinder Diesel">4-Cylinder Diesel</option>
                      <option value="3-Cylinder">3-Cylinder</option>
                      <option value="6-Cylinder Turbo">6-Cylinder Turbo</option>
                      <option value="V8">V8</option>
                      <option value="Hybrid">Hybrid</option>
                    </select>
                  </div>
                  <!--doors-->
                  <div class="form-group">
                    <label for="doors">doors</label>
                    <input type="number" id="doors" name="doors" placeholder="Ex: 4" required>
                  </div>
                  <!--description-->
                  <div class="form-group">
                    <label for="description">description</label>
                    <input type="text" id="description" name="description" placeholder="taper description" required>
                  </div>
                <!-- Ajouter des images -->
                <div class="form-group">
                  <label for="ajouterimages">Ajouter Images</label>
                </div>
                <div class="images-wrapper">
                  <!-- Image Principale -->
                  <div class="image-block">
                    <input type="file" id="image" name="image" accept="image/*">
                    <img id="mainImagePreview" />
                  </div>
                  
                  <!-- Image Secondaire -->
                  <div class="image-block">
                    <input type="file" id="secondaryImage" name="secondaryImage" accept="image/*">
                    <img id="secondaryImagePreview" />
                  </div>
                  
                  <!-- Image supplémentaire -->
                  <div class="image-block">
                    <input type="file" id="extraImage" name="extraImage" accept="image/*">
                    <img id="extraImagePreview" />
                  </div>
                </div>
                
                <script>
                  function previewImage(inputId, imgId) {
                    const input = document.getElementById(inputId);
                    const img = document.getElementById(imgId);
              
                    input.addEventListener("change", function () {
                      const file = input.files[0];
                      if (file) {
                        img.src = URL.createObjectURL(file);
                        img.onload = () => img.classList.add("loaded");
                      }
                    });
                  }
              
                  previewImage("image", "mainImagePreview");
                  previewImage("secondaryImage", "secondaryImagePreview");
                  previewImage("extraImage", "extraImagePreview");
                </script>
              
