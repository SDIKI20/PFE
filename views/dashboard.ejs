                    <input type="number" id="fab_year" name="fab_year" placeholder="Ex: 2023" required>
                  </div>
                   <!-- Couleur -->
                <div class="form-group">
                    <label for="color">Color</label>
                    <input type="text" id="color" name="color" placeholder="Ex: Noir" required>
                  </div>
            
                    <!-- Capacité -->
